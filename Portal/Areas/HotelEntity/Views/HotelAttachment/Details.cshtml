@model HotelAttachmentDto

@{
    Layout = null;
}

<div class="row">
  <div class="col-xl-12 col-lg-12 col-md-12">
    <!-- About User -->
    <div class="card mb-4">
      <div class="row card-body">
        <div class="col-xl-6 col-lg-6 col-md-6">
          <small class="card-text text-uppercase">@Localizer.Get("_Details")</small>
          <ul class="list-unstyled mb-4 mt-3">
            <li class="d-flex align-items-center mb-3">
              <i class="ti ti-cardboards text-heading"></i>
              <span class="fw-medium mx-2 text-heading">@Html.DisplayNameFor(model => model.FileName) :</span>
              <span>@Model.FileName</span>
            </li>
            <li class="d-flex align-items-center mb-3">
              <i class="ti ti-cardboards text-heading"></i>
              <span class="fw-medium mx-2 text-heading">@Html.DisplayNameFor(model => model.FileType) :</span>
              <span>@Model.FileType</span>
            </li>
          </ul>
        </div>
        <div class="col-xl-6 col-lg-6 col-md-6">
          <ul class="list-unstyled mb-4 mt-3">
            <li class="d-flex align-items-center mb-3">
              <i class="ti ti-text-caption text-heading"></i>
              <span class="fw-medium mx-2 text-heading">@Html.DisplayNameFor(model => model.FileUrl) :</span> 
              <span><a href="/@Model.FileUrl" target="_blank" download="@Model.FileName">@Localizer.Get("Download")</a></span>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <!--/ About User -->
  </div>
</div>

<div class="row">
  <div class="col-xl-12 col-lg-12 col-md-12">
    <!-- About User -->
    <div class="card mb-4">
      <div class="row card-body">
        <div class="col-xl-6 col-lg-6 col-md-6">
          <ul class="list-unstyled mb-4 mt-3">
            <li class="d-flex align-items-center mb-3">
              <i class="ti ti-user text-heading"></i>
              <span class="fw-medium mx-2 text-heading">@Html.DisplayNameFor(model => model.CreatedBy) :</span> 
              <span>@Model.CreatedBy</span>
            </li>
            <li class="d-flex align-items-center mb-3">
              <i class="ti ti-user text-heading"></i>
              <span class="fw-medium mx-2 text-heading">@Html.DisplayNameFor(model => model.LastModifiedBy) :</span> 
              <span>@Model.LastModifiedBy</span>
            </li>
          </ul>
        </div>
        <div class="col-xl-6 col-lg-6 col-md-6">
          <ul class="list-unstyled mb-4 mt-3">
            <li class="d-flex align-items-center mb-3">
              <i class="ti ti-device-watch text-heading"></i>
              <span class="fw-medium mx-2 text-heading">@Html.DisplayNameFor(model => model.CreatedAt) :</span> 
              <span>@Model.CreatedAt</span>
            </li>
            <li class="d-flex align-items-center mb-3">
              <i class="ti ti-device-watch text-heading"></i>
              <span class="fw-medium mx-2 text-heading">@Html.DisplayNameFor(model => model.LastModifiedAt) :</span> 
              <span>@Model.LastModifiedAt</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <!--/ About User -->
  </div>
</div>

