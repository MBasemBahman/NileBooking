@model HotelRoomCreateOrEditModel
@{
    DateTime Now = DateTime.UtcNow;
}
<div class="divider">
    <div class="divider-text">@Html.DisplayNameFor(model => model.HotelRoomPrices)</div>
</div>

<div class="repeater">
    <div data-repeater-list="HotelRoomPrices" class="mb-2">
        @if (Model.HotelRoomPrices != null && Model.HotelRoomPrices.Any())
        {
            for (int i = 0; i < Model.HotelRoomPrices.Count; i++)
            {
                <div data-repeater-item class="data-repeater mb-2">
                    <div class="row d-flex align-items-end">

                        <input type="hidden" asp-for="HotelRoomPrices[i].Id" class="idElem" />

                                <div class="col-md-3 col-12">
                            <div class="mb-1">
                                <label class="form-label">@Localizer.Get("FromDate")</label>
                                <input type="text"  value="@(Model.HotelRoomPrices[i].FromDate.ToString("yyyy-MM-dd"))"asp-for="HotelRoomPrices[i].FromDate" class="form-control flatpickr-basic flatpickr-input active fromDate" placeholder="YYYY-MM-DD" readonly="readonly">
                            </div>
                        </div>
                        
                        <div class="col-md-3 col-12">
                            <div class="mb-1">
                                <label class="form-label">@Localizer.Get("ToDate")</label>
                                <input type="text"  value="@(Model.HotelRoomPrices[i].ToDate.ToString("yyyy-MM-dd"))"asp-for="HotelRoomPrices[i].ToDate" class="form-control flatpickr-basic flatpickr-input active toDate" placeholder="YYYY-MM-DD" readonly="readonly">
                            </div>
                        </div>
                        <div class="col-md-2 col-12">
                            <div class="mb-1">
                                <label class="form-label">@Localizer.Get("AdultPrice")</label>
                                <input class="form-control adultPriceElem" asp-for="HotelRoomPrices[i].AdultPrice">
                            </div>
                        </div>
                        
                        <div class="col-md-2 col-12">
                            <div class="mb-1">
                                <label class="form-label">@Localizer.Get("ChildPrice")</label>
                                <input class="form-control childPriceElem" asp-for="HotelRoomPrices[i].ChildPrice">
                            </div>
                        </div>
                        
                        <div class="col-md-2 col-12 mb-50">
                            <div class="mb-1">
                                <button class="remove-btn btn btn-outline-danger text-nowrap px-2" data-repeater-delete
                                        type="button">
                                    <i class="fa fa-trash me-25"></i>
                                    <span>&nbsp;</span>
                                    <span>@Localizer.Get("Remove")</span>
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
            }
        }
        else
        {
            <div data-repeater-item class="data-repeater mb-2">
                <div class="row d-flex align-items-end">

                    <input type="hidden" name=".Id" class="idElem" value="0" />
                    
                    <div class="col-md-3 col-12">
                        <div class="mb-1">
                            <label class="form-label">@Localizer.Get("FromDate")</label>
                            <input type="text" value="@(Now.ToString("yyyy-MM-dd"))" name=".FromDate" class="form-control flatpickr-basic flatpickr-input active fromDate" placeholder="YYYY-MM-DD" readonly="readonly">

                        </div>
                    </div>
                    
                    <div class="col-md-3 col-12">
                        <div class="mb-1">
                            <label class="form-label">@Localizer.Get("ToDate")</label>
                            <input type="text" value="@(Now.ToString("yyyy-MM-dd"))" name=".ToDate" class="form-control flatpickr-basic flatpickr-input active toDate" placeholder="YYYY-MM-DD" readonly="readonly">
                        </div>
                    </div>
                      <div class="col-md-2 col-12">
                        <div class="mb-1">
                            <label class="form-label">@Localizer.Get("AdultPrice")</label>
                            <input class="form-control adultPriceElem" name=".AdultPrice" value="">
                        </div>
                    </div>
                    
                    <div class="col-md-2 col-12">
                        <div class="mb-1">
                            <label class="form-label">@Localizer.Get("ChildPrice")</label>
                            <input class="form-control childPriceElem" name=".ChildPrice" value="">
                        </div>
                    </div>
                    
                    <div class="col-md-2 col-12 mb-50">
                        <div class="mb-1">
                            <button class="remove-btn btn btn-outline-danger text-nowrap px-2" data-repeater-delete newRepeater
                                    type="button">
                                <i class="fa fa-trash me-25"></i>
                                   <span>&nbsp;</span>
                                <span>@Localizer.Get("Remove")</span>
                            </button>
                        </div>
                    </div>
                </div>

            </div>
        }
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <button id="add-new-btn" class="btn btn-success" type="button" data-repeater-create>
                <i class="fa fa-plus me-25"></i>
                <span>&nbsp;</span>
                <span>@Localizer.Get("Add Price")</span>
            </button>
        </div>
    </div>

</div>
