@* ************** General Modal ************** *@

<div class="data-view-control-modal modal fade" id="general-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered1 modal-simple modal-add-new-cc">
        <div class="modal-content p-3 p-md-5">
            <div class="modal-body">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                <div class="general-modal-form-content">

                </div>
              
            </div>
        </div>
    </div>
</div>


@* ************** Error Modal ************** *@

<div class="modal fade modal-danger text-start" id="general-modal" tabindex="-1" aria-labelledby="danger" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myModalLabel120">@Localizer.Get("Error")</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger" role="alert">
                    <div class="alert-body">
                        @Localizer.Get("Something Error!")
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">@Localizer.Get("Ok")</button>
            </div>
        </div>
    </div>
</div>

@* ************** Success Modal ************** *@

<div class="modal fade text-start modal-success" id="success-modal" tabindex="-1" aria-labelledby="success" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myModalLabel110">@Localizer.Get("Success") </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-success" role="alert">
                    <div class="alert-body">
                        @Localizer.Get("Well Done!")
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-bs-dismiss="modal">@Localizer.Get("Ok")</button>
            </div>
        </div>
    </div>
</div>